<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SmartAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/sm_control_color</item>
        <item name="colorPrimaryDark">@color/sm_background_color</item>
        <item name="colorAccent">@color/sm_control_color</item>
        <item name="android:windowBackground">@color/sm_background_color</item>
        <item name="android:textColor">@color/sm_text_color</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="shapeAppearance">@style/CornerAppearance</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="shapeAppearance">@style/CornerAppearance</item>
    </style>

    <style name="CornerAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Button.Normal" parent="BaseButton">
        <item name="android:textColor">@color/md_white</item>
    </style>

    <style name="Button.Error" parent="BaseButton">
        <item name="backgroundTint">@color/md_red500</item>
        <item name="android:textColor">@color/md_white</item>
    </style>

    <style name="Button.Normal.Outlined" parent="OutlinedButton">
        <item name="strokeColor">@color/sm_control_color</item>
        <item name="android:textColor">@color/sm_control_color</item>
    </style>

    <style name="Button.Normal.Gray" parent="BaseButton">
        <item name="backgroundTint">#DCDCDC</item>
        <item name="android:textColor">@color/md_black</item>
    </style>

    <style name="AlertDialog.FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/colorFullscreenProgress</item>
    </style>

    <style name="CheckBox.Normal" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/sm_control_color</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.Design.HelperText.Custom">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/sm_control_color</item>
    </style>

    <style name="TextInputLayout.Simple" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">#00000000</item>
    </style>
</resources>